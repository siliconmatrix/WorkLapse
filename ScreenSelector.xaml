<Window x:Class="WorkLapse.ScreenSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True" WindowStyle="None"
        Title="Position and scale to choose capture region." Height="600" Width="800">
    <Window.Background>
        <SolidColorBrush Opacity="0.1" Color="Red"/>
    </Window.Background>
    <Grid Height="600" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="800">
        <Border BorderBrush="White" BorderThickness="1" HorizontalAlignment="Left" Width="800" Height="600" VerticalAlignment="Top">
            <Border BorderBrush="Black" BorderThickness="1" Margin="-1,-1,-1,575" Background="White" HorizontalAlignment="Right" Width="800" MouseLeftButtonDown="Drag_OnMouseDown" MouseLeftButtonUp="Drag_OnMouseUp"/>
        </Border>
    </Grid>

</Window>
